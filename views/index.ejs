    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: poppins;
    }

    body {
      font-family: "poppins";
      line-height: 1.6;
      transition: all 0.5s ease;
    }

    /* Theme Variables */
    :root {
      --bg-gradient: linear-gradient(
        135deg,
        #f0f9ff 0%,
        #e0e7ff 50%,
        #f3e8ff 100%
      );
      --card-bg: rgba(255, 255, 255, 0.8);
      --text-primary: #1f2937;
      --text-secondary: #6b7280;
      --text-muted: #9ca3af;
      --border-color: #d1d5db;
      --input-bg: #f9fafb;
      --input-focus-bg: #ffffff;
      --brand-gradient: linear-gradient(135deg, #7c3aed, #ec4899);
      --accent-gradient: linear-gradient(135deg, #8b5cf6, #ec4899);
    }

    .dark-theme {
      --bg-gradient: linear-gradient(
        135deg,
        #0f172a 0%,
        #581c87 50%,
        #0f172a 100%
      );
      --card-bg: rgba(255, 255, 255, 0.1);
      --text-primary: #ffffff;
      --text-secondary: #d1d5db;
      --text-muted: #9ca3af;
      --border-color: #4b5563;
      --input-bg: rgba(255, 255, 255, 0.1);
      --input-focus-bg: rgba(255, 255, 255, 0.2);
      --brand-gradient: linear-gradient(135deg, #22d3ee, #a855f7);
      --accent-gradient: linear-gradient(135deg, #7c3aed, #ec4899);
    }

    /* App Container */
    .app-container {
      min-height: 100vh;
      background: var(--bg-gradient);
      position: relative;
      transition: all 0.5s ease;
    }

    .background-pattern {
      position: absolute;
      inset: 0;
      background: radial-gradient(
          circle at 25% 25%,
          rgba(156, 146, 172, 0.1) 0%,
          transparent 50%
        ),
        radial-gradient(
          circle at 75% 75%,
          rgba(139, 92, 246, 0.1) 0%,
          transparent 50%
        );
      background-size: 60px 60px;
      opacity: 0.5;
    }

    .container {
      position: relative;
      z-index: 10;
      max-width: 1024px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    /* Header */
    .header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .brand-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .brand-logo {
      font-size: 2.5rem;
      font-weight: 800;
      background: var(--brand-gradient);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
    }

    .brand-badge {
      background: var(--text-muted);
      color: var(--text-primary);
      padding: 0.25rem 0.5rem;
      border-radius: 0.375rem;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .main-title {
      font-size: 50px;
      font-weight: 800;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .main-subtitle {
      font-size: 18px;
      color: var(--text-secondary);
      max-width: 42rem;
      margin: 0 auto;
    }

    /* Theme Toggle */
    .theme-toggle-container {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 2rem;
    }

    .theme-toggle {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .theme-icon {
      width: 1rem;
      height: 1rem;
      color: var(--text-muted);
      transition: color 0.3s ease;
    }

    .dark-theme .moon-icon {
      color: #a855f7;
    }

    .app-container:not(.dark-theme) .sun-icon {
      color: #f59e0b;
    }

    .switch {
      position: relative;
      display: inline-block;
      width: 3rem;
      height: 1.5rem;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: 0.4s;
      border-radius: 1.5rem;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 1.125rem;
      width: 1.125rem;
      left: 0.1875rem;
      bottom: 0.1875rem;
      background-color: white;
      transition: 0.4s;
      border-radius: 50%;
    }

    input:checked + .slider {
      background-color: #7c3aed;
    }

    input:checked + .slider:before {
      transform: translateX(1.5rem);
    }

    /* Form Card */
    .form-card {
      backdrop-filter: blur(16px);
      background: var(--card-bg);
      border-radius: 1.5rem;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      border: 1px solid rgba(255, 255, 255, 0.1);
      overflow: hidden;
    }

    .card-header {
      text-align: center;
      padding: 2rem 2rem 0;
    }

    .card-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .card-title i {
      color: #a855f7;
    }

    .card-content {
      padding: 2rem;
    }

    /* Form Styles */
    .form {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .form-label {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-input,
    .form-select,
    .form-textarea {
      height: 3rem;
      padding: 0 1rem;
      border: none;
      border-radius: 0.75rem;
      background: var(--input-bg);
      color: var(--text-primary);
      font-size: 1.125rem;
      transition: all 0.3s ease;
      outline: none;
    }

    .form-input:focus,
    .form-select:focus,
    .form-textarea:focus {
      background: var(--input-focus-bg);
      transform: translateY(-1px);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .form-textarea {
      height: auto;
      padding: 1rem;
      resize: none;
      font-family: inherit;
    }

    .form-input::placeholder,
    .form-textarea::placeholder {
      color: var(--text-muted);
    }

    /* Upload Areas */
    .upload-area {
      position: relative;
      border: 2px dashed var(--border-color);
      border-radius: 0.75rem;
      padding: 2rem;
      text-align: center;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .upload-area:hover {
      border-color: #a855f7;
      background: rgba(168, 85, 247, 0.05);
    }

    .upload-area.drag-active {
      border-color: #a855f7;
      background: rgba(168, 85, 247, 0.1);
    }

    .upload-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .upload-icon {
      width: 5rem;
      height: 5rem;
      border: 2px dashed var(--border-color);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      color: var(--text-muted);
    }

    .upload-icon-small {
      font-size: 2rem;
      color: var(--text-muted);
    }

    .upload-title {
      font-weight: 500;
      color: var(--text-primary);
    }

    .upload-subtitle {
      font-size: 0.875rem;
      color: var(--text-muted);
    }

    .upload-preview {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .preview-avatar {
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
      background: var(--accent-gradient);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2.5rem;
    }

    .preview-name {
      font-weight: 500;
      color: var(--text-primary);
    }

    .resume-upload {
      padding: 1.5rem;
    }

    .resume-icon {
      color: #10b981;
      font-size: 1.5rem;
      margin-right: 0.75rem;
    }

    .resume-name {
      font-weight: 500;
      color: var(--text-primary);
    }

    /* Skills Section */
    .skills-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .skills-counter {
      background: rgba(168, 85, 247, 0.1);
      color: #a855f7;
      padding: 0.25rem 0.5rem;
      border-radius: 0.375rem;
      font-size: 0.75rem;
      font-weight: 500;
      border: 1px solid rgba(168, 85, 247, 0.2);
    }

    .skills-container {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .skill-input-group {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      position: relative;
    }

    .skill-input {
      flex: 1;
    }

    .remove-skill-btn {
      background: none;
      border: none;
      color: #ef4444;
      cursor: pointer;
      padding: 0.5rem;
      border-radius: 0.375rem;
      opacity: 0;
      transition: all 0.2s ease;
    }

    .skill-input-group:hover .remove-skill-btn {
      opacity: 1;
    }

    .remove-skill-btn:hover {
      background: rgba(239, 68, 68, 0.1);
    }

    .add-skill-btn {
      width: 100%;
      height: 3rem;
      border: 2px dashed var(--border-color);
      background: none;
      color: var(--text-primary);
      border-radius: 0.75rem;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 500;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .add-skill-btn:hover {
      border-color: #a855f7;
      background: rgba(168, 85, 247, 0.05);
    }

    /* Social Links */
    .social-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    .social-input-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .social-label {
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    /* Separator */
    .separator {
      height: 1px;
      background: rgba(255, 255, 255, 0.2);
      margin: 1rem 0;
    }

    .dark-theme .separator {
      background: rgba(255, 255, 255, 0.2);
    }

    .app-container:not(.dark-theme) .separator {
      background: rgba(0, 0, 0, 0.1);
    }

    /* Submit Button */
    .submit-container {
      padding-top: 1.5rem;
    }

    .submit-btn {
      width: 100%;
      height: 3.5rem;
      background: var(--accent-gradient);
      color: white;
      border: none;
      border-radius: 0.75rem;
      font-size: 1.125rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .submit-btn:hover:not(:disabled) {
      transform: translateY(-2px) scale(1.02);
      box-shadow: 0 20px 40px -10px rgba(168, 85, 247, 0.4);
    }

    .submit-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none;
    }

    .submit-btn.loading {
      pointer-events: none;
    }

    .submit-btn .fa-spinner {
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    /* Footer */
    .footer {
      text-align: center;
      margin-top: 3rem;
    }

    .footer-text {
      color: var(--text-muted);
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
    }

    .footer-brand {
      font-size: 1.5rem;
      font-weight: 700;
      background: var(--brand-gradient);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
    }

    /* Toast */
    .toast {
      position: fixed;
      top: 2rem;
      right: 2rem;
      background: #10b981;
      color: white;
      padding: 1rem 1.5rem;
      border-radius: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 500;
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.2);
      transform: translateX(100%);
      opacity: 0;
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .toast.show {
      transform: translateX(0);
      opacity: 1;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }

      .card-content {
        padding: 1.5rem;
      }

      .social-grid {
        grid-template-columns: 1fr;
      }

      .theme-toggle-container {
        justify-content: center;
      }

      .main-title {
        font-size: 2.5rem;
      }

      .main-subtitle {
        font-size: 1.125rem;
      }
    }

    @media (max-width: 480px) {
      .upload-area {
        padding: 1.5rem;
      }

      .upload-icon {
        width: 4rem;
        height: 4rem;
        font-size: 1.5rem;
      }

      .preview-avatar {
        width: 4rem;
        height: 4rem;
        font-size: 2rem;
      }
      .brand-logo {
        font-size: 2rem;
      }
      .main-title {
        font-size: 2rem;
        line-height: 1.2;
      }
      .brand-container {
        margin-top: 15px;
      }
      .main-subtitle {
        font-size: 1rem;
      }
      .form-card {
        backdrop-filter: none;
      }
    }

    /* Animation Classes */
    .fade-in {
      animation: fadeIn 0.5s ease-in;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .slide-in {
      animation: slideIn 0.3s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    /* Dark theme styles */
    body.dark-theme .form-select,
    body.dark-theme .form-select option {
      /* background-color: #1e1e1e; */
      color: black;
      border: 1px solid #444;
    }

    body.dark-theme .form-select:focus {
      outline: none;
      border-color: #888;
      color: white;
      box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.2);
    }
  </style>
